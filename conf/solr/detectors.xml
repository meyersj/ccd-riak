<?xml version="1.0" encoding="UTF-8" ?>
<schema name="detectors" version="1.5">
 <fields>
   <!-- 'type' attribute must be be defined below in the 'types' child
         and referencing a solr class -->   
   <field name="detectorid"     type="int"      indexed="true"  stored="true" />
   <field name="stationid"      type="int"      indexed="true"  stored="true" />
   <field name="highwayid"      type="int"      indexed="true"  stored="true" />
   <field name="milepost"       type="float"    indexed="false" stored="true" />
   <field name="locationtext"   type="string"   indexed="false" stored="true" />
   <field name="detectorclass"  type="int"      indexed="false" stored="true" />
   <field name="lanenumber"     type="int"      indexed="false" stored="true" />

   <!-- All of these fields are required by Riak Search -->
   <field name="_yz_id"   type="_yz_str" indexed="true" stored="true"  multiValued="false" required="true"/>
   <field name="_yz_ed"   type="_yz_str" indexed="true" stored="false" multiValued="false"/>
   <field name="_yz_pn"   type="_yz_str" indexed="true" stored="false" multiValued="false"/>
   <field name="_yz_fpn"  type="_yz_str" indexed="true" stored="false" multiValued="false"/>
   <field name="_yz_vtag" type="_yz_str" indexed="true" stored="false" multiValued="false"/>
   <field name="_yz_rk"   type="_yz_str" indexed="true" stored="true"  multiValued="false"/>
   <field name="_yz_rt"   type="_yz_str" indexed="true" stored="true"  multiValued="false"/>
   <field name="_yz_rb"   type="_yz_str" indexed="true" stored="true"  multiValued="false"/>
   <field name="_yz_err"  type="_yz_str" indexed="true" stored="false" multiValued="false"/>
 </fields>

 <!-- Set by Riak -->
 <uniqueKey>_yz_id</uniqueKey>

 <types>
    <!-- YZ String: Used for non-analyzed fields -->
    <fieldType name="_yz_str" class="solr.StrField" sortMissingLast="true" />
    <fieldType name="int" class="solr.TrieIntField" sortMissingLast="true" />
    <fieldType name="float" class="solr.TrieFloatField" sortMissingLast="true" />
    <fieldType name="string" class="solr.StrField" sortMissingLast="true" />
  </types>
</schema>
